<% @users = User.all %>

<div style="margin:20px 50px">
<h1 style="font-size:60px;margin-bottom:10px;">Users Index - For Admin Only</h1>
<hr style="border-top:1px solid black;">
<ul>
  <% @users.each do |user| %>
  <div style="height:150px;margin-top:20px">
  <% if user.image_url && !user.image_url.empty? %>
    <img src="<%=user.image_url%>" style="float:left;height:90%;margin-right:20px;">
  <% end %>
  <h1><%= link_to user.name, user_path(user) %></h1>
  <h3>Joined <%= user.created_at %></h3>
  <% if current_user && current_user.admin %>
    <p style="float:left;">
      <%= link_to "Delete", user_path(user), data: {:confirm => 'Are you sure?'}, method: "delete", :style => "float:right;margin-right:10px;" %>
      <%= link_to "Edit", edit_user_path(user), :style => "float:right;margin-right:10px;" %>
    </p>

  <% end %>
  </div>
  <hr>
  <% end %>
</ul>
</div>

<% if @user.image_url %>
  <img src="<%=@user.image_url%>" style="max-width: 20%; height: auto;">
<% end %>

<h1><%= @user.name %>'s Profile Page</h1>

<% if current_user.admin %>

  <%= render partial: "admin_show" %>

<% else %>
  <%= link_to "Edit Profile", edit_user_path(@user), {:style => 'float:left; margin-right:10px;'} %>
  <%= link_to "My Comments", user_comments_path(@user), {:style => 'float:left; margin-right:10px;'} %>
  <a href="#" style="float:left;margin-right:10px">Favorites</a>
  <% if @user.proposal_id %>
  <%= link_to "My Proposal", proposal_path(current_user.proposal_id) %>
  <% else %>
  <p><%= link_to "Submit a Proposal", new_proposal_path %></p>
  <% end %>

  <ul>
    <li>Affiliation: <%= @user.affiliation %></li>
    <li>Borough: <%= @user.borough %></li>
    <li>Zip Code: <%= @user.zip_code %></li>
  </ul>

  <hr>
    <p>Recent Activity:</p>
  <hr>

<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>New Monuments to Women's History</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>

      body {
        margin: 0;
      }

      navbar ul {
        background: lightgray;
      }

      navbar li {
        display:inline;
      }

    </style>
  </head>
  <body>

    <navbar>
      <ul style="list-style-type:none;margin:0;padding:0;">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "View Proposals", proposals_path %></li>
        <% if logged_in? %>
          <% if current_user.name.empty? %>
            <li><%= link_to "#{current_user.email}'s Profile", user_path(current_user) %></li>
          <% else %>
            <li><%= link_to "#{current_user.name}'s Profile", user_path(current_user) %></li>
          <% end %>
          <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
        <% else %>
        <li><%= link_to "Log In", new_session_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </navbar>

    <!-- content -->
    <div>
      <% if flash[:non_admin_warning] %>
        <h1 style="color:red"><%= flash[:non_admin_warning] %></h1>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>New Monuments to Women's History</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=PT+Sans|Raleway:100" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=PT+Sans:700" rel="stylesheet">

<style>

      body {
        margin: 0;
      }

      .main {
        margin: 10px 40px;;

      }

      h1, h2, h3, h4, span, li {
        font-family: 'Raleway', sans-serif;
      }

      span {
        line-height: 3px;
      }

      p {
        font-family: 'PT Sans', sans-serif;
      }

      a {
        text-decoration: none;
        color: black;
      }

      a:hover {
        color: red;
      }

      .sticky {
        position: fixed;
        top: 0;
        width: 100%;
      }

      navbar ul {
        background-color: rgb(249,249,249);
        height: 60px;
      }

      p a {
        text-decoration: underline
      }

      navbar li {
        position: relative;
        left: 50px;
        display:inline;
        padding-left: 5px;
      }

      navbar div {
        position: relative;
        right: 100px;
      }

      .main {
        margin-top:80px;
      }

      div #proposalDetails {
        overflow: overlay;
        height: 500px;
      }

      .js-next {
        width: 175px;
      }

      .js-previous {
        margin: 20px 20px 10px 0px;
        width: 175px;
      }

      #proposalForms {
        border-top: 1px solid lightgray;
        margin-top: 10px;
        height: 110px;
      }

      #rankingForm {
        margin-top: 10px;
        float: left;
      }

      #rankingForm h1 {
        margin: 5px 10px 10px 0;
      }

      #commentForm {
        margin-top: 10px;
        float: right;
      }

      #commentForm h1 {
        margin: 10px 10px 10px 0px;
      }

      #proposalComments {
        border-top: 1px solid lightgray;
        clear: both;
      }

      .sidenav {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 40;
        right: 0;
        border-left: 1px solid lightgray;
        background-color: white;
        overflow: overlay;
        transition: 0.5s;
        padding-top: 20px;
        margin-top: -20px;
      }

      .sidenav a {
        padding: 8px 8px 8px 32px;
        text-decoration: none;
        font-size: 25px;
        color: #818181;
        display: block;
        transition: 0.3s;
      }

      .sidenav a:hover, .topNav a:hover {
        color: #f1f1f1;
      }

      .open {
        background-color:rgb(175,200,229);
        padding: 5px;
        position: fixed;
        right: 25%;
     }
     .topNav {
       height: 0;
       width: 25%;
       position: fixed;
       z-index: 1;
       top: 60;
       left: 0;
       border-right: 1px solid lightgray;
       background-color: white;
       overflow: overlay;
       transition: 0.5s;
       margin-top: -20px;
     }

     .topNav a {
       padding: 8px 8px 8px 16px;
       text-decoration: none;
       font-size: 25px;
       color: #818181;
       display: block;
       transition: 0.3s;
     }
    </style>
  </head>
  <body>

    <div id="mySidenav" class="sidenav">
      <h3 style="font-size:40px;color:rgb(175,200,229);display:inline;margin-left:26px; auto;">Nominees</h1>
      <% if @proposals %>
        <% @proposals.each do |proposal| %>
        <h3 class="proposalLink" id="<%= proposal.id %>"><%= link_to proposal.name, proposal_path(proposal) %></h3>
        <hr>
        <% end %>
      <% end %>
    </div>

    <div class="topNav">
      <ul style="list-style-type:none">
        <% if logged_in? %>
          <li><%= link_to "My Profile", user_path(current_user) %></li>
          <li><%= link_to "Log Out", logout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Log In", new_session_path %></li>
          <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </div>

    <navbar class="sticky">
      <ul style="list-style-type:none;margin:0;padding:0;">
        <li><a id="topNavBurger" href="#" onclick="showTopNav(); return false;" style="font-size:40px;color:rgb(175,200,229);">&#9776;</a></li>
        <li><h1 style="display:inline">sheBuiltNYC</h3></li>
      </ul>
    </navbar>

    <!-- content -->
    <div class="main">
      <% if flash[:non_admin_warning] %>
        <h1 style="color:red"><%= flash[:non_admin_warning] %></h1>
      <% end %>
      <%= yield %>
    </div>



  </body>
</html>


<% if @proposal.image_url %>
  <img src="<%=@proposal.image_url%>" style="border: 1px solid black; max-width: 20%; height: auto; float: left; margin-right: 10px;">
<% end %>

<h1 style="margin-bottom:0px;"><%= @proposal.name %></h1>
<h3 style="margin:0px 0px;"><em><%= @proposal.description %></em></h3>
<% if !@proposal.rankings.empty? %>
<p style="margin-top:2px;">Submitted by: <%= user_name_linked_or_not %></p>
<% end %>
<h3>Why This Proposal Should Be Accepted</h3>
<p><%= @proposal.pitch %></p>


<% if current_user %>
  <%= render partial: 'logged_in_show' %>
<% end %>

<h3>Recent Comments:</h3>
<%= link_to "View All Comments", proposal_comments_path(@proposal) %>
  <hr>
  <% if !@proposal.comments.empty? %>
    <% @proposal.comments.newest_first.limit(3).each do |comment| %>
    <%= comment.content %> - <%= link_to comment.user.name, user_path(comment.user) %> - <%= comment.created_at %><br>
    <%= link_to "Reply", new_proposal_comment_reply_path(@proposal.id, comment.id) %>
    <% if current_user == comment.user %>
      <%= link_to "Delete", comment_path(comment), data: {:confirm => 'Are you sure?'}, method: "delete", :style => 'margin-left:10px;' %>
    <% end %>
    <hr>
    <% end %>
  <% else %>
    <p>There are no comments to display.</p>
    <hr>
  <% end %>

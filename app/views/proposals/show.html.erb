<% if !@proposal.image_url.empty? %>
  <img src="<%=@proposal.image_url%>" style="border: 1px solid black; max-width: 20%; height: auto; float: left; margin-right: 10px;">
<% end %>

<h1><%= @proposal.name %></h1>
<% if !@proposal.rankings.empty? %>
<p>Average Rating: <%= @proposal.rankings_average %></p>
<% end %>
<h3>Description</h3>
<p><%= @proposal.description %></p>
<h3>Why This Proposal Should Be Accepted</h3>
<p><%= @proposal.pitch %></p>


<% if current_user %>

  <% if current_user.proposal_id == @proposal.id || current_user.admin %>
    <%= link_to "Edit this proposal", edit_proposal_path(@proposal) %>
  <% end %>

  <% if current_user.admin %>
    <%= link_to "Destroy", proposal_path(@proposal), data: {:confirm => 'Are you sure?'}, method: "delete" %>
  <% end %>

  <% if !current_user.admin %>
    <h3>Rank this proposal</p>
    <%= form_for(:ranking, url: rankings_path) do |f| %>
      <%= f.number_field :ranking %>
      <%= f.hidden_field :proposal, :value => @proposal.id %>
      <%= f.submit "Submit" %>
    <% end %>
  <% end %>

<% end %>

<div style="color:red;">
  <% if flash[:reply_warning] %>
    <%= flash[:reply_warning] %>
  <% end %>
</div>

<%= form_for(@reply) do |f| %>
  <%= f.text_field :content %>
  <%= f.hidden_field :proposal, :value => params[:proposal_id] %>
  <%= f.hidden_field :comment, :value => params[:comment_id] %>
  <%= f.submit %>
<% end %>
